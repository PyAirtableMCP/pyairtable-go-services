# API Gateway Configuration
PORT=8080
ENVIRONMENT=development

# Service URLs
AUTH_SERVICE_URL=http://auth-service:8001
USER_SERVICE_URL=http://user-service:8002
TENANT_SERVICE_URL=http://tenant-service:8003
WORKSPACE_SERVICE_URL=http://workspace-service:8004
PERMISSION_SERVICE_URL=http://permission-service:8005
AIRTABLE_GATEWAY_URL=http://airtable-gateway:8002

# Database
DATABASE_URL=postgres://postgres:password@localhost:5432/pyairtable_gateway

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100

# Timeouts
REQUEST_TIMEOUT=30s
SHUTDOWN_TIMEOUT=10s

# JWT Secret
JWT_SECRET=your-secret-key-here