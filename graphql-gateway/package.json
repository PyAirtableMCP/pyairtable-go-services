{
  "name": "pyairtable-graphql-gateway",
  "version": "1.0.0",
  "description": "GraphQL Federation Gateway for PyAirtable microservices",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "generate-types": "graphql-codegen --config codegen.yml",
    "introspect": "rover graph introspect http://localhost:4000/graphql"
  },
  "dependencies": {
    "@apollo/gateway": "^2.5.1",
    "@apollo/server": "^4.9.3",
    "@apollo/server-plugin-landing-page-local-default": "^4.0.0",
    "@apollo/server-plugin-landing-page-graphql-playground": "^4.0.0",
    "@apollo/subgraph": "^2.5.1",
    "apollo-server-core": "^3.12.1",
    "apollo-server-express": "^3.12.1",
    "graphql": "^16.8.1",
    "graphql-tag": "^2.12.6",
    "graphql-query-complexity": "^0.12.0",
    "graphql-depth-limit": "^1.1.0",
    "graphql-rate-limit": "^2.0.1",
    "graphql-redis-subscriptions": "^2.6.0",
    "graphql-subscriptions": "^2.0.0",
    "dataloader": "^2.2.2",
    "apollo-datasource-rest": "^3.7.0",
    "apollo-server-plugin-response-cache": "^3.8.2",
    "apollo-tracing": "^0.15.0",
    "apollo-opentracing": "^2.0.1",
    "jaeger-client": "^3.19.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^6.10.0",
    "winston": "^3.10.0",
    "node-fetch": "^3.3.2",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "@types/node": "^20.5.0",
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/compression": "^1.7.2",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/ws": "^8.5.5",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "eslint": "^8.47.0",
    "typescript": "^5.1.6",
    "tsx": "^3.12.7",
    "jest": "^29.6.2",
    "@types/jest": "^29.5.4",
    "ts-jest": "^29.1.1",
    "@graphql-codegen/cli": "^5.0.0",
    "@graphql-codegen/typescript": "^4.0.1",
    "@graphql-codegen/typescript-resolvers": "^4.0.1",
    "@graphql-codegen/typescript-operations": "^4.0.1",
    "rover": "^0.17.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}