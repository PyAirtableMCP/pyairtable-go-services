# GraphQL Gateway Configuration
NODE_ENV=development
PORT=4000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Subgraph URLs
USERS_SUBGRAPH_URL=http://localhost:8001/graphql
WORKSPACES_SUBGRAPH_URL=http://localhost:8002/graphql
AIRTABLE_SUBGRAPH_URL=http://localhost:8003/graphql
FILES_SUBGRAPH_URL=http://localhost:8004/graphql
PERMISSIONS_SUBGRAPH_URL=http://localhost:8005/graphql
NOTIFICATIONS_SUBGRAPH_URL=http://localhost:8006/graphql
ANALYTICS_SUBGRAPH_URL=http://localhost:8007/graphql
AI_SUBGRAPH_URL=http://localhost:8008/graphql

# Tracing Configuration
JAEGER_ENDPOINT=http://localhost:14268/api/traces
SERVICE_NAME=graphql-gateway

# Cache Configuration
CACHE_TTL=300
CACHE_MAX_SIZE=1000

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
MAX_QUERY_COMPLEXITY=1000
MAX_QUERY_DEPTH=10

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Security Configuration
ENABLE_INTROSPECTION=true
ENABLE_PLAYGROUND=true

# Performance Configuration
COMPRESSION_ENABLED=true
CACHE_CONTROL_MAX_AGE=3600

# Monitoring Configuration
METRICS_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30000

# Development Configuration
DEBUG=false
PRETTY_PRINT_LOGS=true